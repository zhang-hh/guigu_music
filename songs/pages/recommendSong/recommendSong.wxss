.recommendSongContainer{

}
.header{
    position: relative;
}
.header image{
    width: 100%;
    height: 300rpx;
}
.header .date{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -100rpx;
    margin-top: -50rpx;
    width: 200rpx;
    height: 100rpx;
    color: white;
    text-align: center;
    line-height: 100rpx;
}
.header .date .day{
    font-size: 40rpx;
}

/*推荐歌曲列表*/
.recommendList{
    position: relative;
    padding: 20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 40rpx;
}
.recommendList .listHeader{
    height: 60rpx;
    line-height: 60rpx;
}
.recommendList .listHeader .changeMore{
    float: right;
    font-size: 28rpx;
    color: #333;
}
.scrollView{
    height: calc(100vh - 360rpx);
}
.scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 30rpx;
}
.scrollItem .musicImg{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.scrollItem .musicContent{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    height: 80rpx;
    line-height: 40rpx;
}
.scrollItem .musicContent .author {
    width: 500rpx;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.scrollItem .musicContent .musicName {
    width: 500rpx;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.scrollItem .radio {
    position: absolute;
    right: 0;
    height: 80rpx;
    line-height: 80rpx;
}
