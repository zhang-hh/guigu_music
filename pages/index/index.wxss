.indexContainer .navSwiper{
    width: 100%;
    height: 300rpx;
}
.indexContainer .navSwiper image{
    width: 100%;
    height: 300rpx;
}
/*导航区域*/
.navContainer{
    display: flex;
}
.navContainer .navItem{
    display: flex;
    flex-direction: column;
    width: 20%;
    align-items: center;
}
.navContainer .navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
    border-radius: 50%;
    background: rgb(240, 19, 19);
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    margin: 20rpx 0;
}
.navContainer .navItem text{
    font-size: 26rpx;
}
/*每日推荐*/
.recommendContainer{
    padding: 40rpx 20rpx;
}
/*滑动区域*/
.scrollBar{
    display: flex;
    height: 300rpx;
}
 .scrollBar .scrollItem{
     width: 200rpx;
     display: flex;
     flex-direction: column;
     margin-right: 20rpx;
}
.scrollBar .scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius:20rpx;
}

/*排行榜*/
.topList{
    padding:20rpx 0;
}
.topList .topListSwiper{
    height: 460rpx;
}
.topList .swiperContent .title{
    font-size: 28rpx;
    line-height: 80rpx;
}
.topList .swiperContent{
    width: 96%;
    margin-right: 4%;
    background-color:#fbfbfb;
}
.topList .musicContent{
    display: flex;
    margin-top: 20rpx;
}
.topList .musicContent image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 20rpx;
}
.topList .musicContent .conut{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-weight: bold;
}
.topList .musicContent text{
    line-height: 100rpx;
}

.scrollBar .scrollItem text{
    font-size: 26rpx;
    line-height: 40rpx;
    /*单行文本显示省略号*/
    overflow: hidden;
    text-overflow: ellipsis;
    /*white-space: nowrap;*/
    /*多行文本显示省略号*/
    display: -webkit-box;  /*webkit盒模型*/
    -webkit-line-clamp:2;  /*控制行数*/
    -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}

